<resources>

    <style name="Theme.BlueTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.BlueTheme</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:dialogTheme">@style/Dialog.BlueTheme</item>
    </style>

    <style name="Theme.BlueTheme.DialogWhenLarge" parent="android:Theme.Holo.Light.DialogWhenLarge">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.BlueTheme</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:dialogTheme">@style/Dialog.BlueTheme</item>
    </style>


    <style name="Dialog.BlueTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:editTextStyle">@style/MyEditTextOnWhite</item>
    </style>

    <style name="Theme.BlueTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/my_normal_text</item>
    </style>

    <style name="ActionBar.Solid.BlueTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/white</item>
    </style>


</resources>